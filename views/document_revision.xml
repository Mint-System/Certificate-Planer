<odoo>
  <data>

    <record model="ir.ui.view" id="certificate_planer.document_revision_list">
      <field name="name">Document Revision List</field>
      <field name="model">certificate_planer.document_revision</field>
      <field name="arch" type="xml">
        <tree>
          <field name="document_id"/>
          <field name="state_id"/>
        </tree>
      </field>
    </record>
  
    <record model="ir.ui.view" id="certificate_planer.document_revision_form">
      <field name="name">Document Revision Form</field>
      <field name="model">certificate_planer.document_revision</field>
      <field name="arch" type="xml">
        <form string="Document Revision Form">
          <sheet>
            <p>Document Revision</p>
            <div class="oe_title">
              <div class="oe_edit_only">
                <label for="document_id"/>
              </div>
              <h1>
                <field name="document_id"/>
              </h1>
            </div>
            <group>
              <field name="state_id"/>
              <field name="reason"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>