<odoo>
  <data>

    <record model="ir.ui.view" id="certificate_planer.specification_list">
      <field name="name">Specification List</field>
      <field name="model">certificate_planer.specification</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="certificate_planer.specification_form">
      <field name="name">Specification Form</field>
      <field name="model">certificate_planer.specification</field>
      <field name="arch" type="xml">
        <form string="Specification Form">
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>