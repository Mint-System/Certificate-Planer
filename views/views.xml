<odoo>
  <data>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="certificate_planer.document_action_window">
      <field name="name">Documents</field>
      <field name="res_model">certificate_planer.document</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="certificate_planer.document_revision_action_window">
      <field name="name">Revisions</field>
      <field name="res_model">certificate_planer.document.revision</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="certificate_planer.part_action_window">
      <field name="name">Parts</field>
      <field name="res_model">certificate_planer.part</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="certificate_planer.bom_action_window">
      <field name="name">BoM</field>
      <field name="res_model">certificate_planer.bom</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Certificate Planer" id="certificate_planer.menu_root" web_icon="certificate_planer,static/description/icon.png"/>

<!-- menu categories -->

  <menuitem name="Documents" id="certificate_planer.documents" parent="certificate_planer.menu_root"/>
  <menuitem name="Parts" id="certificate_planer.parts" parent="certificate_planer.menu_root"/>
  <menuitem name="Configuration" id="certificate_planer.configuration" parent="certificate_planer.menu_root"/>

<!-- actions -->

  <menuitem name="Documents" id="certificate_planer.document_list" parent="certificate_planer.documents" action="certificate_planer.document_action_window"/>
  <menuitem name="Revisions" id="certificate_planer.document_revision_list" parent="certificate_planer.documents" action="certificate_planer.document_revision_action_window"/>
  <menuitem name="Parts" id="certificate_planer.part_list" parent="certificate_planer.parts" action="certificate_planer.part_action_window"/>
  <menuitem name="BoM" id="certificate_planer.bom_list" parent="certificate_planer.parts" action="certificate_planer.bom_action_window"/>

</data>
</odoo>