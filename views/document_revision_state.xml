<odoo>
  <data>

    <record model="ir.ui.view" id="certificate_planer.document_revision_state_list">
      <field name="name">Document Revision State List</field>
      <field name="model">certificate_planer.document_revision_state</field>
      <field name="arch" type="xml">
        <tree default_order="name">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="certificate_planer.document_revision_state_form">
      <field name="name">Document Revision State Form</field>
      <field name="model">certificate_planer.document_revision_state</field>
      <field name="arch" type="xml">
        <form string="Document Revision State Form">
          <sheet>
            <p>Document Revision State</p>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>