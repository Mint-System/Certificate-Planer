<odoo>
  <data>

    <record model="ir.ui.view" id="certificate_planer.document_search">
      <field name="name">Document Search</field>
      <field name="model">certificate_planer.document</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="type_id"/>
          <field name="description"/>
          <field name="state_id"/>
          <filter name="group_type" string="By Type" context="{'group_by': 'type_id'}"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="certificate_planer.document_list">
      <field name="name">Document List</field>
      <field name="model">certificate_planer.document</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="type_id"/>
          <field name="description"/>
          <field name="state_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="certificate_planer.document_form">
      <field name="name">Document Form</field>
      <field name="model">certificate_planer.document</field>
      <field name="arch" type="xml">
        <form string="Document Form">
          <header>
            <button name="view_document_report" type="object" string="View Document Report" />
          </header>
          <sheet>
            <p>Document</p>
            <div class="oe_title">
              <div class="oe_edit_only">
                <label for="name"/>
              </div>
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <field name="description"/>
              <field name="type_id"/>
              <field name="current_revision_id" context="{'default_document_id': id}"/>
              <field name="certificate_id"/>
            </group>
              <p class="oe_edit_only">Note: A Document can have multiple Document Revisions and can be linked with multiple Parts.</p>
            <group>
              <field name="revision_ids" context="{'default_document_id': id}"/>
              <field name="part_ids"/>
            </group>
            <p>Last edit by <field name="write_uid"/> on <field name="write_date"/>.<br/>
            Created by <field name="create_uid"/> on <field name="create_date"/>.</p>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

  </data>
</odoo>
