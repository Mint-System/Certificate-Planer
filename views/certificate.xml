<odoo>
  <data>

    <record model="ir.ui.view" id="certificate_planer.certificate_search">
      <field name="name">Certificate Search</field>
      <field name="model">certificate_planer.certificate</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="aircraft"/>
          <filter name="group_aircraft" string="By Aircraft Type" context="{'group_by': 'aircraft'}"/>
        </search>
      </field>
    </record>
  
    <record model="ir.ui.view" id="certificate_planer.certificate_list">
      <field name="name">Certificate List</field>
      <field name="model">certificate_planer.certificate</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="aircraft"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="certificate_planer.certificate_form">
      <field name="name">Certificate Form</field>
      <field name="model">certificate_planer.certificate</field>
      <field name="arch" type="xml">
        <form string="Certificate Form">
          <sheet>
            <p>Certificate</p>
            <div class="oe_title">
              <div class="oe_edit_only">
                <label for="name"/>
              </div>
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <field name="part_id"/>
              <field name="aircraft"/>
              <field name="specification_id"/>
            </group>
              <p class="oe_edit_only">Note: A Certificate is linked by Documents and Issues.</p>
            <group>
              <field name="document_ids" context="{'default_certificate_id': id}"/>
              <field name="issue_ids" context="{'default_certificate_id': id}"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>